{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "es2020",
    "baseUrl": "./src",
    "paths": {
	    "@providers/*": ["providers/*"],
      "@entities/*": ["entities/*"],
      "@commands/*": ["commands/*"],
    },
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
